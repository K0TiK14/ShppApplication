<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="baseTextStyle">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/custom_white</item>
    </style>

    <style name="h1" parent="baseTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="h2" parent="baseTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h3" parent="baseTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="h4" parent="baseTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="greyH3" parent="h3">
        <item name="android:textColor">@color/custom_gray</item>
    </style>

    <style name="buttonTextBig" parent="baseTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/custom_white</item>
        <item name="android:letterSpacing">0.09</item>
    </style>

    <style name="checkBox" parent="greyH3">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:checked">true</item>
    </style>


    <style name="Base.Widget.MaterialComponents.TextInputEditText" parent="Widget.Design.TextInputEditText" tools:ignore="PrivateResource">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="textInputLayoutFocusedRectEnabled">true</item>
    </style>

    <style name="myFilledBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox
        </item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/dark_blue</item>
        <item name="endIconTint">@drawable/text_input_layout_stroke_color</item>
        <item name="startIconTint">@drawable/text_input_layout_stroke_color</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeColor">@drawable/text_input_layout_stroke_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="cursorColor">@color/custom_white</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextAppearance">@style/h3</item>
        <item name="hintTextColor">@color/custom_gray_2</item>
        <item name="android:textColorHint">@color/custom_gray_2</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/h4</item>
        <item name="helperTextTextColor">@color/custom_red</item>

        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox
        </item>
    </style>

    <style name="helperText" parent="h4">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/custom_red</item>
    </style>

    <style name="custom_TextInputEditText" parent="h2">
        <item name="android:paddingTop">26dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHighlight">@color/custom_darkish_orange</item>
    </style>


</resources>