<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/default_button_border" android:color="@color/custom_white" />
            <corners android:radius="@dimen/default_button_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/default_button_border" android:color="@color/custom_gray" />
            <corners android:radius="@dimen/default_button_radius" />
        </shape>
    </item>
</selector>